# NC State Sports Hub - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Application Information
NEXT_PUBLIC_APP_NAME="NC State Sports Hub"
NEXT_PUBLIC_APP_DESCRIPTION="The ultimate destination for NC State sports fans"
NEXT_PUBLIC_APP_URL="https://ncstatesportshub.com"

# AWS Amplify Configuration
# These will be auto-populated by Amplify, but can be overridden for local development
NEXT_PUBLIC_AWS_REGION="us-east-1"
NEXT_PUBLIC_AWS_COGNITO_REGION="us-east-1"

# Sports API Keys (for external data integration)
ESPN_API_KEY="your_espn_api_key_here"
SPORTS_REFERENCE_API_KEY="your_sports_reference_api_key_here"
NCAA_API_KEY="your_ncaa_api_key_here"

# NC State Official Data Sources
NCSTATE_ATHLETICS_API_URL="https://api.gopack.com"
NCSTATE_ATHLETICS_API_KEY="your_ncstate_api_key_here"

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your_vercel_analytics_id"
SENTRY_DSN="your_sentry_dsn_here"
SENTRY_ORG="your_sentry_org"
SENTRY_PROJECT="nc-state-sports-hub"

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key_here"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Social Media Integration
TWITTER_API_KEY="your_twitter_api_key"
TWITTER_API_SECRET="your_twitter_api_secret"
INSTAGRAM_ACCESS_TOKEN="your_instagram_token"

# Email Service (for notifications)
SENDGRID_API_KEY="your_sendgrid_api_key"
FROM_EMAIL="noreply@ncstatesportshub.com"

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key"

# Cache Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL_SECONDS="300"

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME_SCORES="true"
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_COMMENTS="true"
NEXT_PUBLIC_ENABLE_USER_PROFILES="true"
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES="false"

# Development Configuration
NODE_ENV="development"
NEXT_PUBLIC_DEBUG_MODE="false"
LOG_LEVEL="info"

# Security
JWT_SECRET="your_jwt_secret_for_local_dev_only"
ENCRYPTION_KEY="your_encryption_key_for_local_dev"

# External Services
WEATHER_API_KEY="your_weather_api_key"
TICKETMASTER_API_KEY="your_ticketmaster_api_key"

# Performance Monitoring
LIGHTHOUSE_CI_TOKEN="your_lighthouse_ci_token"
WEB_VITALS_ENDPOINT="https://vitals.vercel-analytics.com/v1/vitals"

# Local Development
DATABASE_URL="postgresql://localhost:5432/ncstatesports_dev"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_for_local_dev"