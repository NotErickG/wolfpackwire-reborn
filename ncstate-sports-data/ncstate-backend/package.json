{
  "name": "nc-state-sports-hub",
  "version": "1.0.0",
  "private": true,
  "description": "NC State Sports News Hub - Ultimate Fan Destination with Production CI/CD",
  "keywords": ["nc-state", "sports", "news", "fan-hub", "basketball", "football", "wolfpack", "production"],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "amplify:dev": "amplify sandbox",
    "amplify:deploy": "amplify deploy",
    "amplify:deploy:staging": "amplify deploy --branch staging",
    "amplify:deploy:prod": "amplify deploy --branch main",
    "amplify:status": "amplify status",
    "amplify:console": "amplify console",
    "cost:check": "aws ce get-cost-and-usage --time-period Start=$(date +%Y-%m-01),End=$(date -d 'next month' +%Y-%m-01) --granularity MONTHLY --metrics BlendedCost",
    "cost:monitor": "./scripts/cost-monitor.sh",
    "backup": "./scripts/backup-data.sh",
    "health-check": "./scripts/health-check.sh",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "node scripts/backup-database.js",
    "performance:audit": "lighthouse-ci autorun",
    "security:audit": "npm audit --audit-level high",
    "analyze": "cross-env ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.1.0",
    "@aws-amplify/ui-react-notifications": "^2.0.5",
    "aws-amplify": "^6.0.15",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "axios": "^1.6.5",
    "date-fns": "^3.3.1",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1",
    "lucide-react": "^0.316.0",
    "react-hook-form": "^7.49.3",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.4",
    "react-intersection-observer": "^9.5.3",
    "framer-motion": "^11.0.3",
    "react-hot-toast": "^2.4.1",
    "sharp": "^0.33.2",
    "next-themes": "^0.2.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "react-share": "^5.0.3",
    "swiper": "^11.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-button": "^0.1.0",
    "@radix-ui/react-card": "^0.1.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-sheet": "^0.1.0",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.0",
    "sonner": "^1.4.0",
    "vaul": "^0.9.0",
    "embla-carousel-react": "^8.0.0",
    "react-day-picker": "^8.10.0",
    "recharts": "^2.10.4",
    "use-debounce": "^10.0.0",
    "@vercel/analytics": "^1.1.2",
    "@sentry/nextjs": "^7.99.0",
    "posthog-js": "^1.103.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/user-event": "^14.5.2",
    "playwright": "^1.41.2",
    "@playwright/test": "^1.41.2",
    "@aws-amplify/cli": "^12.10.1",
    "@next/bundle-analyzer": "^14.1.0",
    "cross-env": "^7.0.3",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.10",
    "@storybook/nextjs": "^7.6.10",
    "@storybook/react": "^7.6.10",
    "@storybook/test": "^7.6.10",
    "storybook": "^7.6.10",
    "@lighthouse-ci/cli": "^0.12.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "dotenv": "^16.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ]
  }
}